  name = Jakub Šťastný
  email = jakub-stastny@users.noreply.github.com

[core]
  excludesfile = ~/.gitignore

[commit]
  cleanup = whitespace

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto

[apply]
  whitespace = nowarn

[branch]
  autosetuprebase = always

[push]
  default = matching

[alias]
  st = status
  p = push
  pu = pull --rebase --autostash
  a = add
  c = commit -m
  ca = commit -a -m
  cav = commit -a -v
  cv = commit -v
  co = checkout
  df = diff
  dfc = diff --cached

[init]
  defaultBranch = master
